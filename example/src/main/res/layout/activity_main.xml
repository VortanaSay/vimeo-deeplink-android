<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/activity_main_dynamic_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/activity_main_dynamic"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/activity_main_instructions_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_dynamic_textview"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/activity_main_instructions" />

        <EditText
            android:id="@+id/activity_main_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_instructions_textview"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="@string/activity_main_uri_hint" />

        <RadioGroup
            android:id="@+id/activity_main_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_edittext">

            <RadioButton
                android:id="@+id/activity_main_video_radiobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/activity_main_type_video" />

            <RadioButton
                android:id="@+id/activity_main_category_radiobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/activity_main_type_category" />

            <RadioButton
                android:id="@+id/activity_main_channel_radiobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/activity_main_type_channel" />

            <RadioButton
                android:id="@+id/activity_main_user_radiobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/activity_main_type_user" />

            <RadioButton
                android:id="@+id/activity_main_vod_radiobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/activity_main_type_vod" />

            <RadioButton
                android:id="@+id/activity_main_url_radiobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/activity_main_type_url" />
        </RadioGroup>

        <Button
            android:id="@+id/activity_main_go_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_radiogroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:minWidth="@dimen/material_button_min_width"
            android:text="@string/activity_main_go" />

        <TextView
            android:id="@+id/activity_main_static_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_go_button"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/activity_main_static"
            android:textAllCaps="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_static_textview"
            android:orientation="vertical">

            <Button
                android:id="@+id/activity_main_launch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_launch" />

            <Button
                android:id="@+id/activity_main_playstore_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_playstore" />


            <Button
                android:id="@+id/activity_main_categories_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_categories" />

            <Button
                android:id="@+id/activity_main_explore_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_explore" />

            <Button
                android:id="@+id/activity_main_feed_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_feed" />

            <Button
                android:id="@+id/activity_main_me_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_me" />


            <Button
                android:id="@+id/activity_main_notification_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_notifications" />

            <Button
                android:id="@+id/activity_main_notification_settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_notification_settings" />

            <Button
                android:id="@+id/activity_main_playlists_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_playlists" />

            <Button
                android:id="@+id/activity_main_upload_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_upload" />

            <Button
                android:id="@+id/activity_main_offline_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_offline" />

            <Button
                android:id="@+id/activity_main_offline_uri_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_offline_uri" />

            <Button
                android:id="@+id/activity_main_watchlater_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_watchlater" />

            <Button
                android:id="@+id/activity_main_purchases_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_purchases" />

            <Button
                android:id="@+id/activity_main_upgrade_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_upgrade" />

            <Button
                android:id="@+id/activity_main_video_manager_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_video_manager" />

            <Button
                android:id="@+id/activity_main_albums_manager_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_albums_manager" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/activity_user_id_albums_edit_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_main_default_user"/>
                <Button
                    android:id="@+id/activity_main_albums_for_user_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_main_albums_for_user" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
